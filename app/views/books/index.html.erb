<p id="notice"><%= notice %></p>
<div class="container">
  <h1><%=@title%></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Editorial</th>
        <th>Year edition</th>
        <th>Isbn</th>
        <th>Author</th>
        <th>Shelf</th>
        <th>Num edition</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.editorial %></td>
          <td><%= book.year_edition %></td>
          <td><%= book.isbn %></td>
          <td><%= book.author.name %></td>
          <td>(<%= book.shelf.id%>) - <%= book.shelf.pasillo %></td>
          <td><%= book.num_edition %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path %>
</div>
