<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :editorial %>
    <%= form.text_field :editorial, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :year_edition %>
    <%= form.text_field :year_edition, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :isbn %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author_id %>
    <%= select_tag "book[author_id]", options_from_collection_for_select(@authors, "id", "name"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :shelf_id %>
    <%= select_tag "book[shelf_id]", options_from_collection_for_select(@shelves, "id", "pasillo"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :num_edition %>
    <%= form.text_field :num_edition, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-xs btn-success" %>
  </div>
<% end %>